{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./bin",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}